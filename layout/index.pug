extends partial/layout.pug

block site_title 
    != config.title

block description
    meta(name="description", content=config.description)
    meta(name="og:url", content=config.url)
    meta(name="og:type", content="website")
    meta(name="og:title", content=config.title)
    meta(name="og:description", content=config.description)
    meta(name="og:image:secure_url", content=config.url + theme.logo)
          
block container
    include mixins/main.pug
    +posts

block pagination
    include mixins/paginator.pug
    +home

block copyright
    include partial/copyright.pug
